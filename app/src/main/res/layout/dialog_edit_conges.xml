<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E3F2FD">

    <EditText
        android:id="@+id/editTextTitreDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Title"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <EditText
        android:id="@+id/editTextDateDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Date"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <EditText
        android:id="@+id/editTextDureeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Duration"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonSaveDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:backgroundTint="#0D47A1"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonCancelDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
